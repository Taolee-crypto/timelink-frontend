<script>
// 사용자 데이터 (실제로는 localStorage에서 가져옴)
let userData = {
  username: User,
  purchaseTL: 5000,     // 구매 TL (현금)
  earnedTL: 2300,       // 획득 TL (광고/이벤트)
  usedEarnedTL: 1495,   // 획득 TL 중 사용한 양
  todayAds: 3,
  maxAds: 10
};

function toggleDropdown() { document.getElementById("dropdown")?.classList.toggle("show"); }
document.addEventListener(click, function(e) { if (!e.target.closest(.avatar)) document.getElementById("dropdown")?.classList.remove("show"); });

function logout() {
  localStorage.removeItem(tl_user);
  localStorage.removeItem(auth_token);
  window.location.href = index.html;
}

// 광고 시청 함수
function watchAd(type, duration, reward) {
  if (userData.todayAds >= userData.maxAds) {
    alert(오늘 광고 한도를 모두 사용했습니다. 내일 다시 시청해주세요.);
    return;
  }
  
  // 광고 시청 시뮬레이션
  alert(`${type === video ? 🎬 영상 : 🎵 오디오} 광고 시청 중... (${duration}초)`);
  
  setTimeout(() => {
    // 획득 TL 증가
    userData.earnedTL += reward;
    userData.todayAds++;
    
    // UI 업데이트
    updateUI();
    
    alert(`✅ 광고 시청 완료! +${reward} TL (획득 TL)`);
  }, 1000);
}

// UI 업데이트
function updateUI() {
  document.getElementById(purchase-tl).textContent = userData.purchaseTL.toLocaleString();
  document.getElementById(earned-tl).textContent = userData.earnedTL.toLocaleString();
  document.getElementById(purchase-tl-preview).textContent = userData.purchaseTL.toLocaleString();
  document.getElementById(earned-tl-preview).textContent = userData.earnedTL.toLocaleString();
  
  document.getElementById(today-count).textContent = userData.todayAds;
  document.getElementById(today-progress).style.width = (userData.todayAds / userData.maxAds * 100) + %;
  document.getElementById(today-earned).textContent = userData.earnedTL;
  document.getElementById(total-earned).textContent = userData.earnedTL;
  
  // 사용률 계산
  const usageRate = Math.round(userData.usedEarnedTL / userData.earnedTL * 100) || 0;
  document.getElementById(usage-rate).textContent = usageRate + %;
  
  const usageMessage = document.getElementById(usage-message);
  if (usageRate >= 70) {
    usageMessage.innerHTML = ✅ 환전 가능!;
    usageMessage.style.color = #10b981;
  } else {
    usageMessage.innerHTML = `⚠️ 환전까지 ${70 - usageRate}% 더 필요`;
    usageMessage.style.color = #f59e0b;
  }
}

// 초기화
(function() {
  const user = JSON.parse(localStorage.getItem("tl_user") || "null");
  const navAuth = document.getElementById(av-auth);
  const navGuest = document.getElementById(av-guest);
  
  if (user) {
    navAuth?.classList.remove("hidden");
    navGuest?.classList.add("hidden");
    if (document.getElementById(avatar-letter)) document.getElementById(avatar-letter).textContent = (user.username || U).charAt(0).toUpperCase();
    
    // 실제 사용자 데이터 로드 (예시)
    // 여기서는 예시 데이터 사용
    updateUI();
  } else {
    navAuth?.classList.add("hidden");
    navGuest?.classList.remove("hidden");
  }
})();
</script>

